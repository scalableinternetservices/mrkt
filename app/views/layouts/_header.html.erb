<header class="navbar navbar-fixed-top navbar-inverse" style="background-color: white;">
  <div class="container">
    <%= link_to "MRKT", root_path, id: "logo" %>
    <nav>
    <% if logged_in? %>
      <ul class="nav navbar-nav navbar-center">
        <li style="width: 675px;">

                <%= form_tag '/feed', method: :post do %>
                    <div class="row" style="margin-top: 5px;">
                        <%= text_field_tag :term, '',class: 'form-control col-xs-10', placeholder: "Search your feed",style:"width:70% !important; margin-bottom: 5px;"%>
                        <%= submit_tag "Go", :name => nil, class: "btn btn-lg btn-primary big col-xs-1", style:"width:28% !important; float:right;" %>
                    </div>
                <% end %>

        </li>

      </ul>
      <% end %>
      <ul class="nav navbar-nav navbar-right">
       <% if logged_in? %>
          <li><%= link_to "Feed", root_path, data: { no_turbolink: true } %></li>
          <li><%= link_to "Users", users_path %></li>
          <li><%= link_to "Shopping Cart", claims_path %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Account <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Profile", current_user %></li>
              <li><%= link_to "Settings", edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "Log out", logout_path, method: "delete" %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "Log in", login_path %></li>
          <li><%= link_to "Sign up", signup_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
